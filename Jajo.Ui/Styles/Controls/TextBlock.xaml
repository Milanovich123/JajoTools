<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Jajo.Ui;component/Assets/Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="AeonikPro22R" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AeonikPro}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>
    <Style x:Key="AeonikPro16R" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AeonikPro}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>
    <Style x:Key="AeonikPro13R" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AeonikPro}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>

</ResourceDictionary>